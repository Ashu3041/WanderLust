<% layout("/layouts/boilerplate")-%>

<body>
    <h2>Update This List</h2>
    <div class="row">
        <div class="col-8 offset-2">
            <form action="/listings/<%= List._id %>?_method=PUT" method="POST" novalidate class="needs-validation">
                <div>
                    <label for="title" class="form-label">Title</label>
                    <input type="text" name="listing[title]" placeholder="Enter Title" value="<%=List.title%>"
                        class="form-control" required>
                </div>
                <br>
                <div>
                    <label for="description" class="form-label">Description</label>
                    <textarea type="text" name="listing[description]" placeholder="Enter description"
                        class="form-control" required><%=List.description%></textarea>
                </div>
                <br>
                <div class="row">
                    <div class="col-md-4">
                        <label for="price" class="form-label">Price</label>
                        <input type="number" name="listing[price]" placeholder="Enter Price" value="<%=List.price%>"
                            class="form-control" required>
                    </div>
                    <br>
                    <div class="col-md-8">
                        <label for="location" class="form-label">Location</label>
                        <input type="text" name="listing[location]" placeholder="Enter Location" value="<%=List.location%>"
                            class="form-control" required>
                    </div>
                </div>
                <br>
                <div>
                    <label for="country" class="form-label">Country</label>
                    <input type="text" name="listing[country]" placeholder="Enter Country" value="<%=List.country%>"
                        class="form-control" required>
                </div>
                <br>
                <div>
                    <label for="image" class="form-label">Image</label>
                    <input type="text" name="listing[image]" placeholder="Enter URL" value="<%=List.image%>"
                        class="form-control" required>
                </div>
                <br>
                <button class="btn btn-dark edit-btn">Update</button>
            </form>
        </div>
    </div>
    <script src="/js/script.js"></script>
    </body>
